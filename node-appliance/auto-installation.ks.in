lang en_US.UTF-8
keyboard us
timezone --utc Etc/UTC
auth --enableshadow --passalgo=sha512
selinux --permissive
network --bootproto=dhcp
firstboot --reconfig

rootpw --lock
user --name=node --lock

clearpart --all --initlabel # --disklabel=gpt
bootloader --timeout=1
autopart --type=thinp

liveimg --url=@SQUASHFS_URL@

poweroff
